modules = ["python-3.11"]
# pyproject.toml

[tool.poetry]
name = "onboarding-challenge"
version = "0.1.0"
description = "경량 온보딩 및 점진 누적 결제 유도 프로젝트"
authors = ["Tele-Chatbot <chatbot@example.com>"]
readme = "README.md"

[tool.poetry.dependencies]
python = "^3.10"
fastapi = "^0.111.0"
uvicorn = {extras = ["standard"], version = "^0.30.1"}

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"

[workflows]
runButton = "Run FastAPI Server"

[[workflows.workflow]]
name = "Run FastAPI Server"
author = 43226313
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 5000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python setup_db.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "poetry install"

[nix]
packages = ["libxcrypt"]

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "uvicorn main:app --host 0.0.0.0 --port 5000"]
